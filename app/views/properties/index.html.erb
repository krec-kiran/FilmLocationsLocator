<div class="jumbotron">
    <div class ="container">
      <div class="center">
          <h1 class="display-3">Location Finder</h1>
          <p class="lead">Digital Platform to find locations in London</p>
          <hr class="marker">
      </div>

        <h1 class="current-category form-group"></h1>
        <div class="row">
            <div class="col-sm-3">
                <div class="single form-group">
                    <h3 class="list-unstyled form-group"><a href="properties">Category</a></h3>
                       <% @props.each do | p | %>
                         <ul class="list-unstyled form-group">
                          <li><a href= "properties?category=<%= p %>"><%= p %></a></li>
                          </ul>
                        <% end %>
                    <hr class="marker">
                    <h3 class="form-group">Location features</h3>
                    <div class="form-group">
                      <%= check_box_tag(:Bedrooms) %>
                      <%= label_tag(:Bedroom,"Bedroom(s)") %>
                    </div>
                    <div class="form-group">
                      <%= check_box_tag(:LivingRooms) %>
                      <%= label_tag(:LivingRooms,"Living Room(s)") %>
                    </div>
                    <div class="form-group">
                      <%= check_box_tag(:Kitchen) %>
                      <%= label_tag(:Kitchen,"Kitchen(s)") %>
                    </div>
                    <div class="form-group">
                      <%= check_box_tag(:Bathrooms) %>
                      <%= label_tag(:Bathrooms,"Bathroom(s)") %>
                    </div>
                    <hr class="marker">
                    <h3 class="list-unstyled">Privacy</h3>
                    <div class="form-group">
                      <%= check_box_tag(:low) %>
                      <%= label_tag(:low,"Low") %>
                    </div>
                    <div class="form-group">
                      <%= check_box_tag(:medium) %>
                      <%= label_tag(:medium,"Medium") %>
                    </div>
                    <div class="form-group">
                      <%= check_box_tag(:high) %>
                      <%= label_tag(:high,"High") %>
                    </div>
                    <div>
                    <button type="button" class="btn btn-primary">Update</button>
                    </div>

                </div>
            </div>

           <div class="col-sm-9">
              <div class="row detail">
                <% @properties.each do |property| %>
                  <% if property[:pic].blank? %>
                      <div class="col-sm-3 form-group">
                        <%= image_tag "http://placehold.it/600x400", class: "play" %>
                      </div>
                    <% else %>
                      <div class="col-sm-3 form-group">
                        <%= image_tag property.pic, class: "play" %>
                      </div>
                    <% end %>
                <% end %>
              </div>
            </div>
        </div>

    </div>

</div>
