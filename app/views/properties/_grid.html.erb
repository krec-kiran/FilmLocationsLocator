<!-- * code for Grid view -->

<div class="col-sm-9">
  <div class="row">
    <% @properties.each do |property| %>
      <% if property[:pic].blank? %>
          <div class="col-sm-3">
          <a href="<%=property_path(property) %>">
            <%= image_tag "http://placehold.it/600x400", class: "play" %>
          </div>
        <% else %>
          <div class="col-sm-3">
           <a href="<%=property_path(property) %>">
            <%= image_tag property.pic, class: "play" %>
          </div>
        <% end %>
    <% end %>
  </div>
</div>


